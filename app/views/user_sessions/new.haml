%h2
  Login

= form_for @user_session do |f|
  - if @user_session.errors.any?
    #error_explanation
      %ul
        - @user_session.errors.full_messages.each do |msg|
          %li
            = msg
  %p
    = f.label :login
    %br
    = f.text_field :login
  %p
    = f.label :password
    %br
    = f.password_field :password
  %p
    = f.submit "Submit"