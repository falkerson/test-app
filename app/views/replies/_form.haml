= form_for([@ticket, @ticket.replies.build]) do |f|
  - unless current_user
    %p
      = f.label :customer_name
      %br
      = f.text_field :customer_name
    %p
      = f.label :customer_email
      %br
      = f.text_field :customer_email
  %p
    = f.label :body
    %br
    = f.text_area :body
  %p
    = f.submit 'Reply'